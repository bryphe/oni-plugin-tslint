{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "outDir": "./lib",
    "lib": [
      "dom",
      "es2017"
    ],
    "declaration": true,
    "sourceMap": true,
    "target": "es2015",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}